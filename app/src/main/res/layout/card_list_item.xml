<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_margin="8dp"
    app:menu="@menu/card_overflow_menu"
    app:cardElevation="6dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:layout_margin="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:padding="0dp">

        <TextView
            android:id="@+id/card_item_card_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Id: "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_card_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="IWjsnassudhHJH7yyBVHBVHB"
            android:textIsSelectable="true"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="@id/card_item_card_id_title"
            app:layout_constraintStart_toEndOf="@id/card_item_card_id_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/card_item_is_default_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Is Default: "
            app:layout_constraintTop_toBottomOf="@id/card_item_card_id"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="true"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@id/card_item_is_default_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_is_default_title"
            app:layout_constraintStart_toEndOf="@id/card_item_is_default_title"/>

        <TextView
            android:id="@+id/card_item_is_selected_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Selected For Payment: "
            app:layout_constraintTop_toBottomOf="@id/card_item_is_default"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_is_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="true"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@id/card_item_is_selected_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_is_selected_title"
            app:layout_constraintStart_toEndOf="@id/card_item_is_selected_title"/>

        <TextView
            android:id="@+id/card_item_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mea Card State: "
            app:layout_constraintTop_toBottomOf="@id/card_item_is_selected_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="DIGITIZATION_STARTED"
            app:layout_constraintTop_toTopOf="@id/card_item_state_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_state_title"
            app:layout_constraintStart_toEndOf="@id/card_item_state_title"/>

        <TextView
            android:id="@+id/card_item_payment_tokens_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Payment Tokens: "
            app:layout_constraintTop_toBottomOf="@id/card_item_state_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_payment_tokens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            app:layout_constraintTop_toTopOf="@id/card_item_payment_tokens_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_payment_tokens_title"
            app:layout_constraintStart_toEndOf="@id/card_item_payment_tokens_title"/>

        <TextView
            android:id="@+id/card_item_payment_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Payment Network: "
            app:layout_constraintTop_toBottomOf="@id/card_item_payment_tokens_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_payment_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="MASTERCARD"
            app:layout_constraintTop_toTopOf="@id/card_item_payment_network_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_payment_network_title"
            app:layout_constraintStart_toEndOf="@id/card_item_payment_network_title"/>

        <TextView
            android:id="@+id/card_item_masked_pan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Masked Pan: "
            app:layout_constraintTop_toBottomOf="@id/card_item_payment_network_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_masked_pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="****  ****  ****  ****"
            app:layout_constraintTop_toTopOf="@id/card_item_masked_pan_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_masked_pan_title"
            app:layout_constraintStart_toEndOf="@id/card_item_masked_pan_title"/>

        <TextView
            android:id="@+id/card_item_valid_thru_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Valid Thru: "
            app:layout_constraintTop_toBottomOf="@id/card_item_masked_pan_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/card_item_valid_thru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23/35"
            app:layout_constraintTop_toTopOf="@id/card_item_valid_thru_title"
            app:layout_constraintBottom_toBottomOf="@id/card_item_valid_thru_title"
            app:layout_constraintStart_toEndOf="@id/card_item_valid_thru_title"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_item_pay_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_item_valid_thru_title"
            app:layout_constraintStart_toStartOf="parent"
            android:text="pay now"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_item_delete_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="@id/card_item_pay_btn"
            app:layout_constraintStart_toEndOf="@id/card_item_pay_btn"
            app:layout_constraintBottom_toBottomOf="@id/card_item_pay_btn"
            android:text="delete"/>

        <ImageView
            android:id="@+id/card_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_vert_menu_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>